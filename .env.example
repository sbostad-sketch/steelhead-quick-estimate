# Admin auth
# Recommended: generated with `npm run hash:admin -- "your-password"`
ADMIN_PASSWORD_HASH=
# Optional fallback for local development
ADMIN_PASSWORD=change-me
AUTH_COOKIE_NAME=steelhead_admin
ADMIN_SESSION_HOURS=12

# Optional SMTP for lead notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFY_EMAIL_TO=
NOTIFY_EMAIL_FROM=

# Production (Vercel): set POSTGRES_URL for persistent storage
POSTGRES_URL=
POSTGRES_SSL=

# Local development: optional override for SQLite location (default ./data.sqlite)
SQLITE_PATH=
